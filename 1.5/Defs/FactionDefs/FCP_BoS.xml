					<FCP_BoS_Sentinel>1</FCP_BoS_Sentinel>
                    <FCP_BoS_Elder>1</FCP_BoS_Elder>
                </options>
            </li>
            <li>
                <kindDef>Trader</kindDef>
                <traders>
                    <FCP_BoS_Scribe_Trader>1</FCP_BoS_Scribe_Trader>
                </traders>
                <carriers>
                    <Brahmin>6</Brahmin>
                </carriers>
                <guards>
					<FCP_BoS_Initiate_Fatigues>8</FCP_BoS_Initiate_Fatigues>
                    <FCP_BoS_Scribe_Field>7</FCP_BoS_Scribe_Field>
                    <FCP_BoS_Initiate_Recon>3</FCP_BoS_Initiate_Recon>
                    <FCP_BoS_Knight>2</FCP_BoS_Knight>
					<FCP_BoS_Paladin>1</FCP_BoS_Paladin>
                    <FCP_BoS_Elder>1</FCP_BoS_Elder>
                </guards>
            </li>
            <li>
                <kindDef>Settlement</kindDef>
                <options>
                    <FCP_BoS_Hopeful>10</FCP_BoS_Hopeful>
					<FCP_BoS_Squire>6</FCP_BoS_Squire>
					<FCP_BoS_Lancer>4</FCP_BoS_Lancer>
                    <FCP_BoS_Initiate_Fatigues>8</FCP_BoS_Initiate_Fatigues>
                    <FCP_BoS_Initiate_Recon>8</FCP_BoS_Initiate_Recon>
                    <FCP_BoS_Scribe>7</FCP_BoS_Scribe>
					<FCP_BoS_Scribe_Field>5</FCP_BoS_Scribe_Field>
					<FCP_BoS_Scribe_Science>4</FCP_BoS_Scribe_Science>
                    <FCP_BoS_Knight>3</FCP_BoS_Knight>
					<FCP_BoS_Paladin>2</FCP_BoS_Paladin>
					<FCP_BoS_Sentinel>1</FCP_BoS_Sentinel>
                    <FCP_BoS_Elder>1</FCP_BoS_Elder>
                </options>
            </li>
        </pawnGroupMakers>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<modExtensions>
			<li Class="FalloutCurrencies.FactionCurrency">
				<currency>FCP_Currency_BoS_Scrip</currency> <!-- Change this to correct defName -->
			</li>
		</modExtensions>
	</FactionDef>

	<ThingSetMakerDef>
		<defName>FCP_BoSRaidLootMaker</defName>
		<root Class="ThingSetMaker_MarketValue">
			<fixedParams>
				<filter>
					<thingDefs>
						<li>FCP_Currency_BoS_Scrip</li>
						<li>MedicineIndustrial</li>
						<li>ComponentIndustrial</li>
						<li>MealSurvivalPack</li>
						<li>Neutroamine</li>
					</thingDefs>
				</filter>
			</fixedParams>
		</root>
	</ThingSetMakerDef>

