    <!--_____ Commonwealth Brotherhood of Steel _____-->

    <!-- Elder Arthur Maxson -->
    
    <PawnKindDef ParentName="FCP_BoSkindBase">
        <defName>FCP_Unique_Pawnkind_Elder_Arthur_Maxson</defName>
        <label>Elder Arthur Maxson</label>
        <defaultFactionDef>FCP_Faction_BoS</defaultFactionDef>
        <factionLeader>true</factionLeader>
        <combatPower>100</combatPower>
        <itemQuality>Excellent</itemQuality>
        <gearHealthRange>1.0~1.0</gearHealthRange>
        <apparelRequired>
            <li>FCP_Apparel_BoS_Brotherhood_Fatigues</li>
            <li>FCP_Apparel_BoS_Battle_Coat</li>
        </apparelRequired>
        <forcedTraits>
            <FCP_Trait_Power_Armor_Trained />
        </forcedTraits>
        <weaponMoney>2500~3500</weaponMoney>
        <weaponTags>
            <li MayRequire="Rick.FCP.EnergyWeapons">FCP_Heavy_Laser_Weapon</li>
        </weaponTags>
        <initialWillRange>7~8</initialWillRange>
        <initialResistanceRange>30~40</initialResistanceRange>
        <backstoryFiltersOverride>
            <li>
                <categoriesChildhood>
                    <li>FCP_Character_Backstory_Arthur_Maxson_Child</li>
                </categoriesChildhood>
                <categoriesAdulthood>
                    <li>FCP_Character_Backstory_Arthur_Maxson_Adult</li>
                </categoriesAdulthood>
            </li>
        </backstoryFiltersOverride>
        <inventoryOptions>
            <skipChance>0.0</skipChance>
            <subOptionsChooseOne>
                <li>
                    <thingDef>FCP_Currency_BoS_Scrip</thingDef>
                    <countRange>200~300</countRange>
                </li>
            </subOptionsChooseOne>
        </inventoryOptions>
    </PawnKindDef>

