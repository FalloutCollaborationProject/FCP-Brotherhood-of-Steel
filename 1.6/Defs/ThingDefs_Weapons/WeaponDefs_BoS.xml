    <!--_____ BoS Melee Weapons _____-->

    <!-- BoS Super Sledge -->

    <ThingDef ParentName="BaseMeleeWeapon_Blunt_Quality">
        <defName>FCP_Melee_BoS_Super_Sledge</defName>
        <label>BoS Super Sledge</label>
        <description>A Brotherhood of Steel manufactured super sledgehammer, built to their exacting specifications. This legendary weapon combines a reinforced durasteel head with advanced kinetic energy storage technology. Upon impact, the stored energy releases in a devastating shockwave, multiplying the force of each blow. Brotherhood paladins favor this weapon for breaching fortifications and engaging heavily armored targets in close combat. The BoS insignia stamped on the handle marks this as official Brotherhood equipment, built to last through countless battles.</description>
        <graphicData>
            <texPath>Things/Items/Weapons/FCP_BoS_Super_Sledge</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.2</uiIconScale>
        <techLevel>Spacer</techLevel>
        <costList>
            <Steel>70</Steel>
            <Plasteel>25</Plasteel>
            <ComponentSpacer>2</ComponentSpacer>
            <ComponentIndustrial>4</ComponentIndustrial>
        </costList>
        <statBases>
            <MarketValue>1800</MarketValue>
            <WorkToMake>18000</WorkToMake>
            <Mass>6.5</Mass>
            <MarketValue>2200</MarketValue>
        </statBases>
        <equippedAngleOffset>-65</equippedAngleOffset>
        <equippedStatOffsets>
            <MeleeDodgeChance>-3</MeleeDodgeChance>
        </equippedStatOffsets>
        <recipeMaker>
            <researchPrerequisite>FCP_Research_BoS_Advanced_Weapons</researchPrerequisite>
            <skillRequirements>
                <Crafting>10</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>FCP_Production_Complex_Weapons_Workbench</li>
            </recipeUsers>
            <displayPriority>520</displayPriority>
        </recipeMaker>
        <weaponTags>
            <li>FCP_BoS_Heavy_Weapon</li>
        </weaponTags>
        <weaponClasses>
            <li>Melee</li>
        </weaponClasses>
        <tools>
            <li>
                <label>handle</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>14</power>
                <cooldownTime>2.5</cooldownTime>
            </li>
            <li>
                <label>kinetic head</label>
                <labelUsedInLogging>false</labelUsedInLogging>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>36</power>
                <cooldownTime>3.0</cooldownTime>
                <armorPenetration>0.50</armorPenetration>
            </li>
        </tools>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Rare</rarity>
            </li>
        </comps>
        <modExtensions>
            <!-- Require they be a super mutant or wear a power armor frame -->
            <li Class="FCP.WeaponRequirement.WeaponRequirementExtension">
                <requirements>
                    <li Class="FCP.WeaponRequirement.WeaponRequirement_AnyInner">
                        <requirements>
                            <li Class="FCP.WeaponRequirement.WeaponRequirement_AnyApparel">
                                <requiredApparel>
                                    <li MayRequire="Rick.FCP.PowerArmor">FCP_Apparel_Power_Armor_Frame</li>
                                </requiredApparel>
                            </li>
                            <!-- For future super muties
                            <li Class="FCP.WeaponRequirement.WeaponRequirement_Xenotype">
                                <allowedXenotypes><li></li></allowedXenotypes>
                                <bannedXenotypes><li></li></bannedXenotypes>
                            </li> -->
                        </requirements>
                    </li>
                </requirements>
            </li>
        </modExtensions>
    </ThingDef>

</Defs>
