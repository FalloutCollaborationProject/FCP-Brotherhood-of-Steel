    <!-- BoS Appalachia T-60 Power Armor Helmet -->

    <ThingDef ParentName="FCP_Apparel_Power_Armor_Helmet_Base" MayRequire="Rick.FCP.PowerArmor">
        <defName>FCP_Apparel_BoS_Appalachia_T60_Power_Armor_Helmet</defName>
        <label>BoS Appalachia T-60 Power Armor Helmet</label>
        <description>Advanced T-60 power armor helmet featuring integrated HUD systems and environmental sensors. The distinctive Appalachian Brotherhood insignia marks this as belonging to the faction that emerged from Vault 76 to reclaim the wasteland and preserve humanity's technological heritage.</description>
        <techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>Things/Apparel/BoS_Power_Armor/BoS_Appalaccia_T60_Power_Armor/FCP_BoS_Appalaccia_T60_Power_Armor_Helmet_south</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.3</drawSize>
        </graphicData>
        <uiIconScale>1.3</uiIconScale>
        <smeltable>false</smeltable>
        <statBases>
            <MaxHitPoints>80</MaxHitPoints>
            <Mass>0.8</Mass>
            <MarketValue>1000</MarketValue>
            <ArmorRating_Sharp>3.00</ArmorRating_Sharp>
            <ArmorRating_Blunt>2.80</ArmorRating_Blunt>
            <ArmorRating_Heat>2.20</ArmorRating_Heat>
            <Insulation_Heat>2</Insulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <ToxicEnvironmentResistance>0.8</ToxicEnvironmentResistance>            <!-- Good, but not perfect -->
            <MoveSpeed>-0.5</MoveSpeed>            <!-- Bulky -->
            <AimingDelayFactor>-0.01</AimingDelayFactor>
            <SocialImpact>-0.05</SocialImpact>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
                <li>FullHead</li>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/BoS_Power_Armor/BoS_Appalaccia_T60_Power_Armor/FCP_BoS_Appalaccia_T60_Power_Armor_Helmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <useDeflectMetalEffect>true</useDeflectMetalEffect>
            <developmentalStageFilter>Adult</developmentalStageFilter>
        </apparel>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Rare</rarity>
            </li>
            <li Class="FCP.Core.PowerArmor.CompProperties_ApparelRequirement">
                <requiredApparels>
                    <li>FCP_Apparel_Power_Armor_Frame</li>
                </requiredApparels>
            </li>
        </comps>
    </ThingDef>

