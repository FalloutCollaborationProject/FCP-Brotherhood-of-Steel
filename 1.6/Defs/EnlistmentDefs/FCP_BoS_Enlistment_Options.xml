        <salaryPeriodDays>14</salaryPeriodDays>

        <!-- Provision Options -->

        <provisionOptions>
            <li>
                <provisionsLabelKey>FCP_BoS_Provisions_Label</provisionsLabelKey>
                <provisionsDescKey>FCP_BoS_Provisions_Desc</provisionsDescKey>
                <provisionsButtonIconTexPath>Things/UI/Enlisted/FCP_BoS_Provisions</provisionsButtonIconTexPath>
                <provisions>
                    <li>
                        <thing>FCP_Item_BoS_Food_Crate</thing>
