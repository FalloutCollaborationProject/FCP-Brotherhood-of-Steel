                <workDescKey>FCP_BoS_Hospital_Desc</workDescKey>
                <workButtonIconTexPath>Things/UI/Enlisted/FCP_BoS_Hospital</workButtonIconTexPath>
                <additionalRestFall>0.25</additionalRestFall>
                <tendCaravanMembersEveryTicks>600</tendCaravanMembersEveryTicks>
