<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!--__________ Brotherhood of Steel Weapons __________-->

    <!--_____ BoS Plasma Weapons _____-->

    <!-- M-94 Plasma Rifle -->

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>FCP_Weapon_BoS_M94_Plasma_Rifle</defName>
        <label>BoS M-94 Plasma Rifle</label>
        <description>A refined plasma rifle developed and manufactured by the Brotherhood of Steel's West Coast chapters. The M-94 represents decades of Brotherhood weapons research, featuring improved magnetic confinement, enhanced cooling systems, and superior durability compared to standard plasma rifles. Each weapon is carefully crafted by Brotherhood scribes and tested to rigorous military standards. The Brotherhood's trademark attention to detail and technological excellence make this one of the most reliable plasma weapons in the wasteland.</description>
        <techLevel>Spacer</techLevel>
        <graphicData>
            <texPath>Things/Items/Weapons/FCP_BoS_M_94_Plasma_Rifle</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>FCP_Sound_Interact_Plasma_Rifle</soundInteract>
        <statBases>
            <WorkToMake>90000</WorkToMake>
            <Mass>4.3</Mass>
            <AccuracyTouch>0.88</AccuracyTouch>
            <AccuracyShort>0.85</AccuracyShort>
            <AccuracyMedium>0.75</AccuracyMedium>
            <AccuracyLong>0.65</AccuracyLong>
            <RangedWeapon_Cooldown>1.4</RangedWeapon_Cooldown>
        </statBases>
        <equippedStatOffsets>
            <AimingDelayFactor>-0.10</AimingDelayFactor>
        </equippedStatOffsets>
        <recipeMaker>
            <researchPrerequisite>FCP_Research_BoS_Advanced_Weapons</researchPrerequisite>
            <skillRequirements>
                <Crafting>10</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="False">
                <li>FCP_Production_Complex_Weapons_Workbench</li>
            </recipeUsers>
        </recipeMaker>
        <costList>
            <Plasteel>40</Plasteel>
            <ComponentSpacer>4</ComponentSpacer>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
        <thingSetMakerTags>
            <li>RewardStandardLowFreq</li>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <weaponTags>
            <li>FCP_BoS_Weapon</li>
        </weaponTags>
        <weaponClasses>
            <li>RangedLight</li>
        </weaponClasses>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>FCP_Bullet_Plasma</defaultProjectile>
                <warmupTime>0.9</warmupTime>
                <range>27.9</range>
                <soundCast>FCP_Sound_Shot_Plasma_Rifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Rare</rarity>
            </li>
        </comps>
        <modExtensions>
            <li Class="FalloutCore.DeathEffectModExtension">
                <effectChance>0.35</effectChance>
            </li>
        </modExtensions>
    </ThingDef>

    <!--_____ BoS Melee Weapons _____-->

    <!-- BoS Super Sledge -->

    <ThingDef ParentName="BaseMeleeWeapon_Blunt_Quality">
        <defName>FCP_Weapon_BoS_Super_Sledge</defName>
        <label>BoS Super Sledge</label>
        <description>A Brotherhood of Steel manufactured super sledgehammer, built to their exacting specifications. This legendary weapon combines a reinforced durasteel head with advanced kinetic energy storage technology. Upon impact, the stored energy releases in a devastating shockwave, multiplying the force of each blow. Brotherhood paladins favor this weapon for breaching fortifications and engaging heavily armored targets in close combat. The BoS insignia stamped on the handle marks this as official Brotherhood equipment, built to last through countless battles.</description>
        <graphicData>
            <texPath>Things/Items/Weapons/FCP_BoS_Super_Sledge</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.2</uiIconScale>
        <techLevel>Spacer</techLevel>
        <costList>
            <Steel>70</Steel>
            <Plasteel>25</Plasteel>
            <ComponentSpacer>2</ComponentSpacer>
            <ComponentIndustrial>4</ComponentIndustrial>
        </costList>
        <statBases>
            <WorkToMake>18000</WorkToMake>
            <Mass>6.5</Mass>
            <MarketValue>2200</MarketValue>
        </statBases>
        <equippedAngleOffset>-65</equippedAngleOffset>
        <equippedStatOffsets>
            <MeleeDodgeChance>-3</MeleeDodgeChance>
        </equippedStatOffsets>
        <recipeMaker>
            <researchPrerequisite>FCP_Research_BoS_Advanced_Weapons</researchPrerequisite>
            <skillRequirements>
                <Crafting>10</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>FCP_Production_Complex_Weapons_Workbench</li>
            </recipeUsers>
            <displayPriority>520</displayPriority>
        </recipeMaker>
        <weaponTags>
            <li>FCP_BoS_Heavy_Weapon</li>
        </weaponTags>
        <weaponClasses>
            <li>Melee</li>
        </weaponClasses>
        <tools>
