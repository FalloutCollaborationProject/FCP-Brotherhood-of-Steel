<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!--_____ BoS Power Armors Recipes _____-->

    <!-- BoS Appalachia T60 Power Armor Recipe -->

    <RecipeDef MayRequire="Rick.FCP.PowerArmor">
        <defName>Make_BoS_Appalachia_T60_Power_Armor</defName>
        <label>paint T-60 power armor Appalachia chapter</label>
        <description>Paint a T-60 power armor with Appalachia Brotherhood Appalachia colors.</description>
        <jobString>Painting T-60 power armor.</jobString>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <effectWorking>Smith</effectWorking>
        <soundWorking>Recipe_Smith</soundWorking>
        <workAmount>500</workAmount>
        <recipeUsers>
            <li>FCP_Production_Armor_Workbench</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>FCP_Apparel_Power_Armor_T60Armor</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>FCP_Apparel_Power_Armor_T60Armor</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <FCP_Apparel_BoS_Appalachia_T60_Power_Armor>1</FCP_Apparel_BoS_Appalachia_T60_Power_Armor>
        </products>
        <skillRequirements>
            <Crafting>8</Crafting>
        </skillRequirements>
        <displayPriority>230</displayPriority>
        <researchPrerequisites>
            <li>FCP_Research_CombatArmorStandard</li>
            <li>FCP_Research_Power_Armor_Training</li>
        </researchPrerequisites>
        <modExtensions>
            <li Class="FCP.Core.RecipeExtension_GoodwillCheck">
                <requireFaction>FCP_Faction_BoS</requireFaction>
                <minimumGoodwill>60</minimumGoodwill>
                <uncraftableIfFactionDefeated>true</uncraftableIfFactionDefeated>
            </li>
        </modExtensions>
    </RecipeDef>

