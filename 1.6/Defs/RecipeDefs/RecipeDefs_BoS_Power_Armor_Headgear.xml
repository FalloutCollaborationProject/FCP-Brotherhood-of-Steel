<Defs>

    <!--_____ BoS Power Armors Recipes _____-->

    <!-- BoS Appalaccia T60 Power Armor Recipe -->

    <RecipeDef MayRequire="Rick.FCP.PowerArmor">
        <defName>Make_BoS_Appalaccia_T60_Power_Armor_Helmet</defName>
        <label>make appalaccia t60 power armor helmet</label>
        <description>Make a appalaccia t60 power armor helmet.</description>
        <jobString>Making appalaccia t60 power armor helmet.</jobString>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <effectWorking>Smith</effectWorking>
        <soundWorking>Recipe_Smith</soundWorking>
        <workAmount>500</workAmount>
        <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
        <recipeUsers>
            <li>FCP_Production_Armor_Workbench</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>FCP_Apparel_Power_Armor_T60_Helmet</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>FCP_Apparel_Power_Armor_T60_Helmet</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <FCP_Apparel_BoS_Appalaccia_T60_Power_Armor_Helmet>1</FCP_Apparel_BoS_Appalaccia_T60_Power_Armor_Helmet>
        </products>
        <skillRequirements>
            <Crafting>8</Crafting>
        </skillRequirements>
        <displayPriority>230</displayPriority>
        <researchPrerequisites>
			<li>FCP_Research_CombatArmorStandard</li>
            <li>FCP_Research_BoS_Power_Armor</li>
		</researchPrerequisites>
        <researchPrerequisites>
			<li>FCP_Research_CombatArmorStandard</li>
            <li>FCP_Research_BoS_Power_Armor</li>
		</researchPrerequisites>
        <modExtensions>
            <li Class="RecipeGoodwillLimiter.RecipeExtension_GoodwillCheck">
                <requireFaction>FCP_Faction_BoS</requireFaction>
                <minimumGoodwill>60</minimumGoodwill>
                <uncraftableIfFactionDefeated>true</uncraftableIfFactionDefeated>
            </li>
        </modExtensions>
    </RecipeDef>

