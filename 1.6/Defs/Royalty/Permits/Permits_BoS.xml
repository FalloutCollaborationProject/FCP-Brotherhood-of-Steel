<Defs>

	<!--__________ Permits __________-->

	<!-- Base BoS Permit -->

	<RoyalTitlePermitDef Name="FCP_Permit_BoS_DropResourcesBase" Abstract="True">
		<workerClass>RoyalTitlePermitWorker_DropResources</workerClass>
		<faction>FCP_Faction_BoS</faction>
		<usableOnWorldMap>true</usableOnWorldMap>
		<royalAid>
