<?xml version="1.0" encoding="utf-8" ?>
<Defs MayRequire="Ludeon.RimWorld.Royalty">

    <!--__________ Title Defs __________-->

    <!--_____ Brotherhood of Steel Titles _____-->

    <!-- Initiate -->

    <RoyalTitleDef ParentName="FCP_Base_Empire_Titles">
        <defName>FCP_Title_BoS_Initiate</defName>
        <label>Initiate</label>
        <description>The lowest rank in the Brotherhood of Steel. Initiates are in training, learning the Brotherhood's ways and proving their worth. They perform basic duties and assist full members while earning the right to become a true Brother or Sister of Steel.</description>
        <tags>
            <li>FCP_Title_BoS</li>
        </tags>
        <seniority>0</seniority>
        <favorCost>1</favorCost>
        <changeHeirQuestPoints>1000</changeHeirQuestPoints>
        <allowDignifiedMeditationFocus>False</allowDignifiedMeditationFocus>
        <awardWorkerClass>RoyalTitleAwardWorker_Instant</awardWorkerClass>
        <permitPointsAwarded>1</permitPointsAwarded>
    </RoyalTitleDef>

    <!-- Knight -->

    <RoyalTitleDef ParentName="FCP_Base_Empire_Titles">
        <defName>FCP_Title_BoS_Knight</defName>
        <label>Knight</label>
        <description>Knights are the Brotherhood's front-line warriors, fully trained in combat operations and the maintenance of power armor. They lead patrols, engage hostile forces, and recover pre-War technology from dangerous locations. Knights are the backbone of Brotherhood military strength.</description>
        <tags>
            <li>FCP_Title_BoS</li>
        </tags>
        <seniority>300</seniority>
        <favorCost>8</favorCost>
        <changeHeirQuestPoints>1000</changeHeirQuestPoints>
        <commonality>1</commonality>
        <allowDignifiedMeditationFocus>True</allowDignifiedMeditationFocus>
        <awardWorkerClass>RoyalTitleAwardWorker_Instant</awardWorkerClass>
        <requiredApparel>
            <li>
                <bodyPartGroupsMatchAny>
                    <li>Torso</li>
                </bodyPartGroupsMatchAny>
                <requiredTags>
                    <li>FCP_Power_Armor</li>
                </requiredTags>
            </li>
        </requiredApparel>
        <permitPointsAwarded>2</permitPointsAwarded>
    </RoyalTitleDef>

    <!-- Scribe -->

    <RoyalTitleDef ParentName="FCP_Base_Empire_Titles">
        <defName>FCP_Title_BoS_Scribe</defName>
        <label>Scribe</label>
        <description>Scribes are the Brotherhood's scholars and technicians, dedicated to preserving and understanding pre-War technology. They maintain archives, research artifacts, and ensure that knowledge is not lost. While not primarily combatants, Scribes are crucial to the Brotherhood's mission.</description>
        <tags>
            <li>FCP_Title_BoS</li>
        </tags>
