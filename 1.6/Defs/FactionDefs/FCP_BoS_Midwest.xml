<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!--__________ Factions __________-->

	<!-- Midwestern Brotherhood -->

	<FactionDef ParentName="FactionBase">
		<defName>FCP_Faction_BoS_Midwest</defName>
		<label>Midwestern Brotherhood</label>
		<description>The Midwestern Brotherhood of Steel broke away from the main order during an airship expedition that crash-landed in the Midwest. Unlike their Western counterparts, the Midwestern chapter has adopted a more pragmatic and expansionist philosophy, actively recruiting tribals and wastelanders into their ranks. They maintain the Brotherhood's devotion to technology and military prowess, but have shed much of the isolationism that defines other chapters. Their territory spans vast stretches of the former American Midwest, making them one of the largest and most diverse Brotherhood chapters, though they remain estranged from Lost Hills' authority.</description>
		<royalTitleTags>
			<li>FCP_Title_BoS</li>
		</royalTitleTags>
		<royalFavorLabel>Honor</royalFavorLabel>
		<royalTitleInheritanceWorkerClass>RoyalTitleInheritanceWorker</royalTitleInheritanceWorkerClass>
		<royalTitleInheritanceRelations>
		</royalTitleInheritanceRelations>
		<colorSpectrum>
			<li>(1, 1, 1)</li>
		</colorSpectrum>
		<maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
		<pawnSingular>Brother</pawnSingular>
		<pawnsPlural>Brothers</pawnsPlural>
		<categoryTag>Outlander</categoryTag>
		<settlementGenerationWeight>0.02</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<maxCountAtGameStart>1</maxCountAtGameStart>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>General</leaderTitle>
		<fixedLeaderKinds>
			<li>FCP_Pawnkind_BoS_Midwest_General</li>
		</fixedLeaderKinds>
		<factionIconPath>World_Icon/BoS_Icon/FCP_Midwestern_BoS_World_Icon</factionIconPath>
		<techLevel>Industrial</techLevel>
		<fixedName>Midwestern Brotherhood</fixedName>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
		<allowedCultures>
			<li>FCP_Culture_BoS</li>
		</allowedCultures>

		<!--__________ Ideology __________-->

		<fixedIdeo>true</fixedIdeo>
		<ideoName>The Steel Vanguard</ideoName>
		<ideoDescription>We are the Brotherhood evolved. When our airships crashed in the Midwest, we learned that survival demands adaptation. We recruit the worthy - tribals, wastelanders, even former enemies - because strength comes from unity, not isolation. The Codex guides us, but does not chain us. We expand, we protect, we endure.</ideoDescription>
		<forcedMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Structure_Ideological</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">FCP_Meme_Midwest_Steel_Vanguard</li>
		</forcedMemes>
		<requiredPreceptsOnly>true</requiredPreceptsOnly>

		<!--__________ Biotech __________-->

		<xenotypeSet>
			<xenotypeChances>
				<Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0</Neanderthal>
				<Hussar MayRequire="Ludeon.RimWorld.Biotech">0</Hussar>
				<Pigskin MayRequire="Ludeon.RimWorld.Biotech">0</Pigskin>
				<Yttakin MayRequire="Ludeon.RimWorld.Biotech">0</Yttakin>
				<Genie MayRequire="Ludeon.RimWorld.Biotech">0</Genie>
				<Dirtmole MayRequire="Ludeon.RimWorld.Biotech">0</Dirtmole>
				<Highmate MayRequire="Ludeon.RimWorld.Biotech">0</Highmate>
			</xenotypeChances>
		</xenotypeSet>

		<!--__________ Backstories __________-->

		<backstoryFilters>
			<li>
				<categories>
					<li>FCP_Backstory_BoS_Midwest</li>
					<li>FCP_Backstory_BoS_Midwest_Child</li>
				</categories>
			</li>
		</backstoryFilters>

		<caravanTraderKinds>
			<li>Caravan_Outlander_BulkGoods</li>
			<li>Caravan_Outlander_CombatSupplier</li>
			<li>FCP_Caravan_BoS_Prisoner_Exchange</li>
			<li>Caravan_Outlander_Exotic</li>
		</caravanTraderKinds>
		<visitorTraderKinds>
			<li>Visitor_Outlander_Standard</li>
		</visitorTraderKinds>
		<baseTraderKinds>
			<li>Base_Outlander_Standard</li>
		</baseTraderKinds>
		<allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
		<raidLootMaker>FCP_BoSRaidLootMaker</raidLootMaker>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(700, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<kindDef>Combat</kindDef>
				<options>
					<FCP_Pawnkind_BoS_Midwest_Paladin>8</FCP_Pawnkind_BoS_Midwest_Paladin>
					<FCP_Pawnkind_BoS_Midwest_General>1</FCP_Pawnkind_BoS_Midwest_General>
				</options>
			</li>
			<li>
				<kindDef>Peaceful</kindDef>
				<options>
					<FCP_Pawnkind_BoS_Midwest_Paladin>8</FCP_Pawnkind_BoS_Midwest_Paladin>
					<FCP_Pawnkind_BoS_Midwest_General>1</FCP_Pawnkind_BoS_Midwest_General>
				</options>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<FCP_Pawnkind_BoS_Midwest_Paladin>8</FCP_Pawnkind_BoS_Midwest_Paladin>
					<FCP_Pawnkind_BoS_Midwest_General>1</FCP_Pawnkind_BoS_Midwest_General>
				</options>
			</li>
		</pawnGroupMakers>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<modExtensions>
			<li Class="FCP.Enlist.FactionEnlistOptions">
				<enlistOptionsDefs>
					<li>FCP_Enlistment_BoS</li>
				</enlistOptionsDefs>
			</li>
			<li Class="FCP.Currencies.CurrencyReplacement">
				<currency>FCP_Currency_BoS_Scrip</currency>
			</li>
			<li Class="FCP_Shuttles.FactionModExtension">
				<transportShipDef>FCP_BoS_Vertibird</transportShipDef>
				<minDistanceBetweenShuttles>10</minDistanceBetweenShuttles>
				<maxPawnCountInOneShuttle>6</maxPawnCountInOneShuttle>
			</li>
		</modExtensions>
	</FactionDef>

</Defs>