<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!--__________ Factions __________-->

	<!-- Outcast Remnants -->

	<FactionDef ParentName="FactionBase">
		<defName>FCP_Faction_BoS_Outcast_Remnants</defName>
		<label>Brotherhood Outcasts</label>
		<description>The Outcast Remnants are a hardened splinter group of the Brotherhood of Steel, formed by those who rejected the Brotherhood's changing ideals and chose to uphold the original mission: the recovery and preservation of advanced technology at any cost. Isolated from their former brothers, the Outcasts are fiercely independent, pragmatic, and often distrustful of outsiders. Their camps are fortified, their patrols relentless, and their loyalty to their cause unwavering. Though their numbers are few, their discipline, technical expertise, and mastery of power armor make them a formidable force in the wasteland.</description>
		<royalTitleTags MayRequire="Ludeon.RimWorld.Royalty">
			<li>FCP_Title_Outcast</li>
		</royalTitleTags>
		<royalFavorLabel MayRequire="Ludeon.RimWorld.Royalty">Tech Scrip</royalFavorLabel>
		<royalTitleInheritanceWorkerClass MayRequire="Ludeon.RimWorld.Royalty">RoyalTitleInheritanceWorker</royalTitleInheritanceWorkerClass>
		<royalTitleInheritanceRelations MayRequire="Ludeon.RimWorld.Royalty">
		</royalTitleInheritanceRelations>
		<colorSpectrum>
			<li>(1, 1, 1)</li>
		</colorSpectrum>
		<maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
		<pawnSingular>Outcast</pawnSingular>
		<pawnsPlural>Outcasts</pawnsPlural>
		<categoryTag>Outlander</categoryTag>
		<settlementGenerationWeight>0.001</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>Protector</leaderTitle>
		<fixedLeaderKinds>
			<li>FCP_Pawnkind_BoS_Outcast_Protector</li>
		</fixedLeaderKinds>
		<factionIconPath>World_Icon/BoS_Icon/FCP_Outcast_World_Icon</factionIconPath>
		<techLevel>Industrial</techLevel>
		<fixedName>Brotherhood Outcasts</fixedName>
		<settlementNameMaker>FCP_Namer_Settlement_Outcasts</settlementNameMaker>
		<allowedCultures>
			<li>FCP_Culture_BoS_Outcasts</li>
		</allowedCultures>

		<!--__________ Ideology __________-->

		<fixedIdeo MayRequire="Ludeon.RimWorld.Ideology">true</fixedIdeo>
		<ideoName MayRequire="Ludeon.RimWorld.Ideology">True Codex</ideoName>
		<ideoDescription MayRequire="Ludeon.RimWorld.Ideology">We are the keepers of the true Brotherhood mission. Technology must be preserved at all costs. Outsiders cannot be trusted with the power of the Old World. The Codex is law.</ideoDescription>
		<forcedMemes MayRequire="Ludeon.RimWorld.Ideology">
			<!-- Structure -->
			<li>Structure_Ideological</li>
			<!-- Memes -->
			<li>FCP_Meme_Outcast_True_Codex</li>
			<li>FCP_Meme_Outcast_Defenders</li>
		</forcedMemes>
		<requiredPreceptsOnly MayRequire="Ludeon.RimWorld.Ideology">true</requiredPreceptsOnly>
		<disallowedPrecepts MayRequire="Ludeon.RimWorld.Ideology">
			<li>DrugUse_MedicalOnly</li>
			<li>DrugUse_Prohibited</li>
		</disallowedPrecepts>
		<disallowedMemes MayRequire="Ludeon.RimWorld.Ideology">
			<li>Nudism</li>
			<li>Blindsight</li>
		</disallowedMemes>

		<!--__________ Biotech __________-->

		<xenotypeSet>
			<xenotypeChances>
				<Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0</Neanderthal>
				<Hussar MayRequire="Ludeon.RimWorld.Biotech">0</Hussar>
				<Pigskin MayRequire="Ludeon.RimWorld.Biotech">0</Pigskin>
				<Yttakin MayRequire="Ludeon.RimWorld.Biotech">0</Yttakin>
				<Genie MayRequire="Ludeon.RimWorld.Biotech">0</Genie>
				<Dirtmole MayRequire="Ludeon.RimWorld.Biotech">0</Dirtmole>
				<Highmate MayRequire="Ludeon.RimWorld.Biotech">0</Highmate>
			</xenotypeChances>
		</xenotypeSet>

		<!--__________ Backstories __________-->

		<backstoryFilters>
			<li>
				<categories>
					<li>FCP_Backstory_Outcasts</li>
					<li>FCP_Backstory_Outcasts_Child</li>
				</categories>
			</li>
		</backstoryFilters>

		<caravanTraderKinds>
			<li>Caravan_Outlander_BulkGoods</li>
			<li>Caravan_Outlander_CombatSupplier</li>
			<li>FCP_Caravan_BoS_Prisoner_Exchange</li>
			<li>Caravan_Outlander_Exotic</li>
			<li>Caravan_Outlander_PirateMerchant</li>
		</caravanTraderKinds>
		<visitorTraderKinds>
			<li>Visitor_Outlander_Standard</li>
		</visitorTraderKinds>
		<baseTraderKinds>
			<li>Base_Outlander_Standard</li>
		</baseTraderKinds>
		<allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
		<raidLootMaker>FCP_BoSRaidLootMakerOutcasts</raidLootMaker>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(700, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<!-- Normal fights, standard mix -->
				<kindDef>Combat</kindDef>
				<options>
					<FCP_Pawnkind_BoS_Outcast_Defeneder>5</FCP_Pawnkind_BoS_Outcast_Defeneder>
					<FCP_Pawnkind_BoS_Outcast_Protector>1</FCP_Pawnkind_BoS_Outcast_Protector>
				</options>
			</li>
			<li>
				<kindDef>Peaceful</kindDef>
				<options>
					<FCP_Pawnkind_BoS_Outcast_Specialist>7</FCP_Pawnkind_BoS_Outcast_Specialist>
					<FCP_Pawnkind_BoS_Outcast_Defeneder>3</FCP_Pawnkind_BoS_Outcast_Defeneder>
					<FCP_Pawnkind_BoS_Outcast_Protector>1</FCP_Pawnkind_BoS_Outcast_Protector>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<FCP_Pawnkind_BoS_Scribe_Proctor>1</FCP_Pawnkind_BoS_Scribe_Proctor>
				</traders>
				<carriers>
					<FCP_Animal_Brahmin>6</FCP_Animal_Brahmin>
				</carriers>
				<guards>
					<FCP_Pawnkind_BoS_Outcast_Specialist>7</FCP_Pawnkind_BoS_Outcast_Specialist>
					<FCP_Pawnkind_BoS_Outcast_Defeneder>3</FCP_Pawnkind_BoS_Outcast_Defeneder>
					<FCP_Pawnkind_BoS_Outcast_Protector>1</FCP_Pawnkind_BoS_Outcast_Protector>
				</guards>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<FCP_Pawnkind_BoS_Outcast_Specialist>7</FCP_Pawnkind_BoS_Outcast_Specialist>
					<FCP_Pawnkind_BoS_Outcast_Defeneder>3</FCP_Pawnkind_BoS_Outcast_Defeneder>
					<FCP_Pawnkind_BoS_Outcast_Protector>1</FCP_Pawnkind_BoS_Outcast_Protector>
				</options>
			</li>
		</pawnGroupMakers>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<modExtensions>
            <!-- Make them hostile to the Enclave and Lyons' Pride Remnants -->
            <li Class="FCP.Core.ModExtension_FactionPermanentlyHostileTo">
                <hostileFactionDefs>
                    <li MayRequire="Rick.FCP.Enclave">FCP_Faction_Enclave</li>
					<li>FCP_Faction_BoS_Lyons_Pride_Remnants</li>
                </hostileFactionDefs>
            </li>
			<li Class="FCP_Shuttles.FactionModExtension">
				<transportShipDef>FCP_BoS_Outcast_Vertibird</transportShipDef>
				<minDistanceBetweenShuttles>10</minDistanceBetweenShuttles>
				<maxPawnCountInOneShuttle>6</maxPawnCountInOneShuttle>
			</li>
            <!-- Ideology stuff -->
            <li Class="FCP.Core.ModExtension_FixedIdeo">
                <ideoIconDef>FCP_Icon_Outcasts</ideoIconDef>
                <ideoColorDef>LightGrey</ideoColorDef>
                <memberName>Brother</memberName>
                <adjective>Brother</adjective>
                <roleOverrides>
                    <li>
                        <preceptDef>FCP_IdeoRole_Outcast_Defender</preceptDef>
                        <newName>Defender</newName>
                        <disableApparelRequirements>true</disableApparelRequirements>
                        <apparelRequirementsOverride></apparelRequirementsOverride>
                    </li>
                    <li>
                        <preceptDef>IdeoRole_Leader</preceptDef>
                        <newName>Protector</newName>
                        <disableApparelRequirements>true</disableApparelRequirements>
                    </li>
                    <li>
                        <preceptDef>IdeoRole_Moralist</preceptDef>
                        <newName>Specialist</newName>
                        <disableApparelRequirements>true</disableApparelRequirements>
                        <!--<apparelRequirementsOverride></apparelRequirementsOverride>-->
                    </li>
				</roleOverrides>
			</li>
            <!-- Make them unable to use drop pods -->
            <li Class="FCP.Core.ModExtension_FactionBannedArrivalModes">
                <arrivalModes>
                    <li>EdgeDrop</li>
                    <li>EdgeDropGroups</li>
                    <li>CenterDrop</li>
                    <li>RandomDrop</li>
                </arrivalModes>
            </li>
		</modExtensions>
	</FactionDef>

	<ThingSetMakerDef>
		<defName>FCP_BoSRaidLootMakerOutcasts</defName>
		<root Class="ThingSetMaker_MarketValue">
			<fixedParams>
				<filter>
					<thingDefs>
						<li>MedicineIndustrial</li>
						<li>ComponentIndustrial</li>
						<li>MealSurvivalPack</li>
						<li>Neutroamine</li>
					</thingDefs>
				</filter>
			</fixedParams>
		</root>
	</ThingSetMakerDef>

</Defs>
