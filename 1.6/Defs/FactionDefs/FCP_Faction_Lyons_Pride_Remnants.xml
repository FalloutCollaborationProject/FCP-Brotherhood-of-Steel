<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!--__________ Factions __________-->

	<!-- Lyons' Pride Remnants -->

	<FactionDef ParentName="FactionBase">
		<defName>FCP_Faction_BoS_Lyons_Pride_Remnants</defName>
		<label>Lyons' Pride Remnants</label>
		<description>The Lyons' Pride remnants are a faction of disciplined and technologically advanced warriors, striving to preserve the ideals of their late leader, Elder Lyons. Once a proud and unified chapter, they now operate as a fragmented yet determined group, clinging to their mission of protecting humanity and safeguarding advanced technology. Though their numbers have dwindled, their resolve remains unshaken, and they continue to uphold their code of honor amidst the chaos of the wasteland. Their advanced weaponry, power armor, and tactical expertise make them a formidable force, whether as allies or adversaries.</description>
		<royalTitleTags>
			<li>FCP_Title_Lyons_Pride</li>
		</royalTitleTags>
		<royalFavorLabel>Pride Honor</royalFavorLabel>
		<royalTitleInheritanceWorkerClass>RoyalTitleInheritanceWorker</royalTitleInheritanceWorkerClass>
		<royalTitleInheritanceRelations>
		</royalTitleInheritanceRelations>
		<colorSpectrum>
			<li>(1, 1, 1)</li>
		</colorSpectrum>
		<maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
		<pawnSingular>Brother</pawnSingular>
		<pawnsPlural>Brothers</pawnsPlural>
		<categoryTag>Outlander</categoryTag>
		<settlementGenerationWeight>0.001</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>Elder</leaderTitle>
		<fixedLeaderKinds>
			<li>FCP_Pawnkind_Lyons_Pride_Star_Paladin</li>
		</fixedLeaderKinds>
		<factionIconPath>World_Icon/BoS_Icon/FCP_Lyons_Pride_Remnants_World_Icon</factionIconPath>
		<techLevel>Industrial</techLevel>
		<fixedName>Lyons' Pride Remnants</fixedName>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
		<allowedCultures>
			<li>FCP_Culture_Lyons_BoS</li>
		</allowedCultures>

		<!--__________ Ideology __________-->

		<fixedIdeo>true</fixedIdeo>
		<ideoName>Lyons' Legacy</ideoName>
		<ideoDescription>Elder Lyons taught us that technology without compassion is worthless. We are the shield of the people, protectors of the innocent, and proof that the Brotherhood can be more than collectors of artifacts.</ideoDescription>
		<forcedMemes>
			<!-- Structure -->
			<li MayRequire="Ludeon.RimWorld.Ideology">Structure_Ideological</li>
			<!-- Memes -->
			<li MayRequire="Ludeon.RimWorld.Ideology">FCP_Meme_Lyons_Steel_Compassion</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">FCP_Meme_Lyons_Shield</li>
		</forcedMemes>
		<requiredPreceptsOnly>true</requiredPreceptsOnly>
		<disallowedPrecepts>
			<li MayRequire="Ludeon.RimWorld.Ideology">DrugUse_MedicalOnly</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">DrugUse_Prohibited</li>
		</disallowedPrecepts>
		<disallowedMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
		</disallowedMemes>

		<!--__________ Biotech __________-->

		<xenotypeSet>
			<xenotypeChances>
				<Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0</Neanderthal>
				<Hussar MayRequire="Ludeon.RimWorld.Biotech">0</Hussar>
				<Pigskin MayRequire="Ludeon.RimWorld.Biotech">0</Pigskin>
				<Yttakin MayRequire="Ludeon.RimWorld.Biotech">0</Yttakin>
				<Genie MayRequire="Ludeon.RimWorld.Biotech">0</Genie>
				<Dirtmole MayRequire="Ludeon.RimWorld.Biotech">0</Dirtmole>
				<Highmate MayRequire="Ludeon.RimWorld.Biotech">0</Highmate>
			</xenotypeChances>
		</xenotypeSet>

		<!--__________ Backstories __________-->

		<backstoryFilters>
			<li>
				<categories>
					<li>FCP_Backstory_Lyons_BoS</li>
					<li>FCP_Backstory_Lyons_Child</li>
				</categories>
			</li>
		</backstoryFilters>

		<caravanTraderKinds>
			<li>Caravan_Outlander_BulkGoods</li>
			<li>Caravan_Outlander_CombatSupplier</li>
			<li>FCP_Caravan_BoS_Prisoner_Exchange</li>
			<li>Caravan_Outlander_Exotic</li>
			<li>Caravan_Outlander_PirateMerchant</li>
		</caravanTraderKinds>
		<visitorTraderKinds>
			<li>Visitor_Outlander_Standard</li>
		</visitorTraderKinds>
		<baseTraderKinds>
			<li>Base_Outlander_Standard</li>
		</baseTraderKinds>
		<allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
		<raidLootMaker>FCP_BoSRaidLootMakerLyon</raidLootMaker>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(700, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<!-- Normal fights, standard mix -->
				<kindDef>Combat</kindDef>
				<options>
					<FCP_Pawnkind_BoS_Initiate_Recon>8</FCP_Pawnkind_BoS_Initiate_Recon>
					<FCP_Pawnkind_BoS_Field_Scribe>5</FCP_Pawnkind_BoS_Field_Scribe>
					<FCP_Pawnkind_BoS_Knight>2</FCP_Pawnkind_BoS_Knight>
					<FCP_Pawnkind_Lyons_Pride_Knight>2</FCP_Pawnkind_Lyons_Pride_Knight>
					<FCP_Pawnkind_Lyons_Pride_Paladin>2</FCP_Pawnkind_Lyons_Pride_Paladin>
					<FCP_Pawnkind_Lyons_Pride_Star_Paladin>1</FCP_Pawnkind_Lyons_Pride_Star_Paladin>
					<FCP_Pawnkind_BoS_Paladin>1</FCP_Pawnkind_BoS_Paladin>
					<FCP_Pawnkind_BoS_Sentinel>1</FCP_Pawnkind_BoS_Sentinel>
					<FCP_Pawnkind_BoS_Elder>1</FCP_Pawnkind_BoS_Elder>
				</options>
			</li>
			<li>
				<kindDef>Peaceful</kindDef>
				<options>
					<FCP_Pawnkind_BoS_Initiate_Recon>8</FCP_Pawnkind_BoS_Initiate_Recon>
					<FCP_Pawnkind_BoS_Field_Scribe>5</FCP_Pawnkind_BoS_Field_Scribe>
					<FCP_Pawnkind_BoS_Knight>2</FCP_Pawnkind_BoS_Knight>
					<FCP_Pawnkind_Lyons_Pride_Knight>2</FCP_Pawnkind_Lyons_Pride_Knight>
					<FCP_Pawnkind_Lyons_Pride_Paladin>2</FCP_Pawnkind_Lyons_Pride_Paladin>
					<FCP_Pawnkind_Lyons_Pride_Star_Paladin>1</FCP_Pawnkind_Lyons_Pride_Star_Paladin>
					<FCP_Pawnkind_BoS_Paladin>1</FCP_Pawnkind_BoS_Paladin>
					<FCP_Pawnkind_BoS_Sentinel>1</FCP_Pawnkind_BoS_Sentinel>
					<FCP_Pawnkind_BoS_Elder>1</FCP_Pawnkind_BoS_Elder>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<FCP_Pawnkind_BoS_Scribe_Proctor>1</FCP_Pawnkind_BoS_Scribe_Proctor>
				</traders>
				<carriers>
					<FCP_Animal_Brahmin>6</FCP_Animal_Brahmin>
				</carriers>
				<guards>
					<FCP_Pawnkind_BoS_Field_Scribe>7</FCP_Pawnkind_BoS_Field_Scribe>
					<FCP_Pawnkind_BoS_Initiate_Recon>3</FCP_Pawnkind_BoS_Initiate_Recon>
					<FCP_Pawnkind_BoS_Knight>2</FCP_Pawnkind_BoS_Knight>
					<FCP_Pawnkind_BoS_Paladin>1</FCP_Pawnkind_BoS_Paladin>
					<FCP_Pawnkind_BoS_Elder>1</FCP_Pawnkind_BoS_Elder>
				</guards>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<FCP_Pawnkind_BoS_Hopeful>10</FCP_Pawnkind_BoS_Hopeful>
					<FCP_Pawnkind_BoS_Squire>6</FCP_Pawnkind_BoS_Squire>
					<FCP_Pawnkind_BoS_Lancer>4</FCP_Pawnkind_BoS_Lancer>
					<FCP_Pawnkind_BoS_Initiate_Recon>8</FCP_Pawnkind_BoS_Initiate_Recon>
					<FCP_Pawnkind_BoS_Scribe>7</FCP_Pawnkind_BoS_Scribe>
					<FCP_Pawnkind_BoS_Field_Scribe>5</FCP_Pawnkind_BoS_Field_Scribe>
					<FCP_Pawnkind_BoS_Science_Scribe>4</FCP_Pawnkind_BoS_Science_Scribe>
					<FCP_Pawnkind_BoS_Knight>3</FCP_Pawnkind_BoS_Knight>
					<FCP_Pawnkind_Lyons_Pride_Knight>2</FCP_Pawnkind_Lyons_Pride_Knight>
					<FCP_Pawnkind_Lyons_Pride_Paladin>2</FCP_Pawnkind_Lyons_Pride_Paladin>
					<FCP_Pawnkind_Lyons_Pride_Star_Paladin>1</FCP_Pawnkind_Lyons_Pride_Star_Paladin>
					<FCP_Pawnkind_BoS_Paladin>2</FCP_Pawnkind_BoS_Paladin>
					<FCP_Pawnkind_BoS_Sentinel>1</FCP_Pawnkind_BoS_Sentinel>
					<FCP_Pawnkind_BoS_Elder>1</FCP_Pawnkind_BoS_Elder>
				</options>
			</li>
		</pawnGroupMakers>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<modExtensions>
            <!-- Make them hostile to the Outcast Remnants -->
            <li Class="FCP.Core.ModExtension_FactionPermanentlyHostileTo">
                <hostileFactionDefs>
                    <li MayRequire="altushka.boscompendium">FCP_Faction_BoS_Outcast_Remnants</li>
                </hostileFactionDefs>
            </li>
			<li Class="FCP.Enlist.FactionEnlistOptions">
				<enlistOptionsDefs>
					<li>FCP_Enlistment_Lyons_Pride</li>
				</enlistOptionsDefs>
			</li>
			<li Class="FCP_Shuttles.FactionModExtension">
				<transportShipDef>FCP_BoS_Lyons_Pride_Vertibird</transportShipDef>
				<minDistanceBetweenShuttles>10</minDistanceBetweenShuttles>
				<maxPawnCountInOneShuttle>6</maxPawnCountInOneShuttle>
			</li>
            <!-- Ideology stuff -->
            <li Class="FCP.Core.ModExtension_FixedIdeo">
                <ideoIconDef>FCP_Icon_Lyons_Pride</ideoIconDef>
                <ideoColorDef>LightGrey</ideoColorDef>
                <memberName>Brother</memberName>
                <adjective>Brother</adjective>
                <roleOverrides>
                    <li>
                        <preceptDef>FCP_IdeoRole_Lyons_Shield</preceptDef>
                        <newName>Shield Paladin</newName>
                        <disableApparelRequirements>true</disableApparelRequirements>
                        <apparelRequirementsOverride></apparelRequirementsOverride>
                    </li>
                    <li>
                        <preceptDef>IdeoRole_Leader</preceptDef>
                        <newName>Elder</newName>
                        <disableApparelRequirements>true</disableApparelRequirements>
                    </li>
                    <li>
                        <preceptDef>IdeoRole_Moralist</preceptDef>
                        <newName>Star Paladin</newName>
                        <disableApparelRequirements>true</disableApparelRequirements>
                        <!--<apparelRequirementsOverride></apparelRequirementsOverride>-->
                    </li>
                </roleOverrides>
            </li>
		</modExtensions>
	</FactionDef>

	<ThingSetMakerDef>
		<defName>FCP_BoSRaidLootMakerLyon</defName>
		<root Class="ThingSetMaker_MarketValue">
			<fixedParams>
				<filter>
					<thingDefs>
						<li>MedicineIndustrial</li>
						<li>ComponentIndustrial</li>
						<li>MealSurvivalPack</li>
						<li>Neutroamine</li>
					</thingDefs>
				</filter>
			</fixedParams>
		</root>
	</ThingSetMakerDef>

</Defs>