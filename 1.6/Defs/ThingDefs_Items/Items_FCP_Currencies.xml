<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!--__________ Currencies __________-->

    <!-- BoS Scrip -->

    <ThingDef ParentName="ResourceBase">
        <defName>FCP_Currency_BoS_Scrip</defName>
        <label>Brotherhood Scrip</label>
        <description>An official paper currency issued by the Brotherhood of Steel. These notes are backed by the Brotherhood's vast technological resources and can be exchanged for advanced equipment, supplies, and services within Brotherhood controlled territories. More valuable than standard bottle caps due to the organization's strict resource management and reputation for honoring debts.</description>
        <graphicData>
            <texPath>Things/Items/Currencies/FCP_BoS_Scrip_Currency</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <resourceReadoutPriority>Middle</resourceReadoutPriority>
        <soundInteract>Silver_Drop</soundInteract>
        <soundDrop>Silver_Drop</soundDrop>
        <useHitPoints>false</useHitPoints>
        <healthAffectsPrice>false</healthAffectsPrice>
        <resourceReadoutAlwaysShow>true</resourceReadoutAlwaysShow>
        <statBases>
            <RoyalFavorValue>0.004</RoyalFavorValue>
            <MarketValue>1.25</MarketValue>
            <Mass>0.008</Mass>
            <Flammability>0</Flammability>
        </statBases>
        <thingCategories>
            <li>FCP_Currencies</li>
        </thingCategories>
        <stackLimit>500</stackLimit>
        <smallVolume>true</smallVolume>
        <allowedArchonexusCount>1000</allowedArchonexusCount>
        <possessionCount>40</possessionCount>
    </ThingDef>

</Defs>
